<%- include('./partials/header.ejs') %>
<div class="w-full h-screen bg-[url('https://images.unsplash.com/photo-1491895200222-0fc4a4c35e18?q=80&w=774&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
  <div class="sm:w-[60vw] md:w-[30vw] bg-center bg-cover bg-no-repeat bg-white px-20 py-10 rounded-3xl shadow-lg">
    <h1
      class="text-4xl mb-7 capitalize font-semibold text-zinc-700 tracking-tighter leading-none text-center"
    >
      Welcome to Pinterest
    </h1>
    <form action="/login" method="post" class="flex flex-col space-y-3 mt-3">
      <input
        class="block w-full px-3 py-2 border-2 rounded-md"
        type="text"
        name="username"
        placeholder="Username"
        required
      />
      <input
        class="block w-full px-3 py-2 border-2 rounded-md"
        type="password"
        name="password"
        placeholder="Password"
        required
      />
      <input
        class="block w-full px-3 py-2 bg-red-600 text-white rounded-full"
        type="submit"
        name="submit"
        value="Login"
      />
      <a class="inline-block mt-2 text-zinc-500 font-semibold" href=""
        >Forgot Password?</a
      >
      <p class="text-xs w-3/4 font-semibold text-zinc-700 mt-7 mx-auto">
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge you've read our Privacy Policy; Opens a new tab.
        Notice at collection; Opens a new tab.
      </p>
    </form>
    <a href="/register" class="w-full inline-block mt-7 text-sm font-semibold text-zinc-700 text-center">Don't have an account?</a>
  </div>
</div>
<%- include('./partials/footer.ejs') %>
